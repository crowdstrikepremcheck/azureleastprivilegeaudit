{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "accountName": {
      "type": "string",
      "defaultValue": "auto-azure-least-privilige-audit"
    },
	"runbooks": {
		"type": "string",
		"defaultValue": "https%3A%2F%2Fraw.githubusercontent.com%2Fcrowdstrikepremcheck%2Fazureleastprivilegeaudit%2Frefs%2Fheads%2Fmain%2F"
    }
  },
  "variables": {
    "RunbookA": "[uri('https%3A%2F%2Fraw.githubusercontent.com%2Fcrowdstrikepremcheck%2Fazureleastprivilegeaudit%2Frefs%2Fheads%2Fmain%2F', 'SecurityAudit.ps1')]",
    "RunbookB": "[uri('https%3A%2F%2Fraw.githubusercontent.com%2Fcrowdstrikepremcheck%2Fazureleastprivilegeaudit%2Frefs%2Fheads%2Fmain%2F', 'SecurityCentreAudit.ps1')]",
    "DeploymentVerification": "[uri('https%3A%2F%2Fraw.githubusercontent.com%2Fcrowdstrikepremcheck%2Fazureleastprivilegeaudit%2Frefs%2Fheads%2Fmain%2F', 'DeploymentVerification.json')]"
  },
  "resources": [
    {
      "name": "[parameters('accountName')]",
      "apiVersion": "2020-02-01-preview",
      "type": "Microsoft.Automation/AutomationAccounts",
      "location": "eastus",
      "properties": {
        "sku": {
          "name": "Basic"
        }
      }
    },
    {
      "apiVersion": "2020-02-01-preview",
	  "type": "Microsoft.Automation/automationAccounts/runbooks",
      "location": "eastus",
      "name": "SecurityAudit",
      "properties": {
        "runbookType": "Script",
        "logProgress": "false",
        "logVerbose": "false",
        "publishContentLink": {
          "uri": "[variables('RunbookA')]",
          "version": "1.0.0.0"
        }
      },
      "kind": "runbooks"
    },
    {
      "apiVersion": "2020-02-01-preview",
	  "type": "Microsoft.Automation/automationAccounts/runbooks",
      "location": "westeurope",
      "name": "SecurityCenterAudit",
      "properties": {
        "runbookType": "Script",
        "logProgress": "false",
        "logVerbose": "false",
        "publishContentLink": {
          "uri": "[variables('RunbookB')]",
          "version": "1.0.0.0"
        }
      },
      "kind": "runbooks"
    },
    {
      "apiVersion": "2020-02-01-preview",
      "name": "DeploymentVerification",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('DeploymentVerification')]"
        }
      }
    }
  ]
}
