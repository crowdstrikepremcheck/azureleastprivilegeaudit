{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "accountName": {
      "type": "string",
      "defaultValue": "auto-azure-least-privilige-audit"
    }
  },
  "variables": {
	"RunbookAName": "SecurityAudit.ps1",
	"RunbookBName": "SecurityCentreAudit.ps1",
	"uriFormat": "https://raw.githubusercontent.com/crowdstrikepremcheck/azureleastprivilegeaudit/refs/heads/main/",
	"RunbookAuri": "[uri(variables('uriFormat'), variables('RunbookAName'))]",
    "RunbookBuri": "[uri(variables('uriFormat'), variables('RunbookBName'))]",
    "DeploymentVerificationuri": "[uri(variables('uriFormat'), 'DeploymentVerification.json')]",
	"RunbookA": "[uriComponent(variables('RunbookAuri'))]",
	"RunbookA": "[uriComponent(variables('RunbookBuri'))]",
	"DeploymentVerification": "[uriComponent(variables('DeploymentVerificationuri'))]"
  },
  "resources": [
    {
      "name": "[parameters('accountName')]",
      "apiVersion": "2020-02-01-preview",
      "type": "Microsoft.Automation/AutomationAccounts",
      "location": "eastus",
      "properties": {
        "sku": {
          "name": "Basic"
        }
      }
    },
    {
      "apiVersion": "2020-02-01-preview",
	  "type": "Microsoft.Automation/automationAccounts/runbooks",
      "location": "eastus",
      "name": "Microsoft.Automation/automationAccounts/runbooks/SecurityAudit",
      "properties": {
        "runbookType": "Script",
        "logProgress": "false",
        "logVerbose": "false",
        "publishContentLink": {
          "uri": "[variables('RunbookA')]",
          "version": "1.0.0.0"
        }
      },
      "kind": "runbooks"
    },
    {
      "apiVersion": "2020-02-01-preview",
	  "type": "Microsoft.Automation/automationAccounts/runbooks",
      "location": "eastus",
      "name": "Microsoft.Automation/automationAccounts/runbooks/SecurityCenterAudit",
      "properties": {
        "runbookType": "Script",
        "logProgress": "false",
        "logVerbose": "false",
        "publishContentLink": {
          "uri": "[variables('RunbookB')]",
          "version": "1.0.0.0"
        }
      },
      "kind": "runbooks"
    },
    {
      "apiVersion": "2020-02-01-preview",
      "name": "DeploymentVerification",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('DeploymentVerification')]",
		  "contentVersion": "1.0.0.0"
        }
      }
    }
  ]
}
